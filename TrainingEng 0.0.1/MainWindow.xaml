        <Button x:Name="BtnPage4" Content="Выход" HorizontalAlignment="Left" Height="50" Margin="784,226,0,0" VerticalAlignment="Top" Width="144" Click="BtnPage4_Click" FontSize="36" FontFamily="Corbel Light" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="1"/>

